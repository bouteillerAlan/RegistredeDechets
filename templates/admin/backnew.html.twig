{% extends 'admin/backhome.html.twig' %}

{% block title %}Ajout d'un BSD{% endblock %}

{% block subcontent %}

    <div class="container">
        <div class="row">

            {{ form_start(formEmetteur) }}

                <div class="col m12 s12">{{ form_row(formEmetteur.fichier_bsd) }}</div>

                <div class="col m12 s12">{{ form_row(formEmetteur.id_bsd) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.date_enlevement) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.designation) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.code_nomenclature) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.quantite) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.code_dr) }}</div>

                <div class="col m12 s12">{{ form_row(formEmetteur.entreposage) }}</div>

                <div class="col m12 s12">{{ form_row(formEmetteur.transporteur) }}</div>

                <div class="col m12 s12">{{ form_row(formEmetteur.entreprise_traitement) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.code_dr_traitement) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.date_admission) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.date_traitement) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.mode_traitement) }}</div>

                <div class="col m12 s12">{{ form_row(formEmetteur.commentaire) }}</div>

                <div class="divider"></div>


                <div class="col s12">
                    <div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Enregistrer
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>

            {{ form_end(formEmetteur) }}

        </div>
    </div>

{% endblock %}