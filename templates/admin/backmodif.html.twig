{% extends 'admin/backhome.html.twig' %}

{% block title %}Modification d'un BSD{% endblock %}

{% block subcontent %}

    <div class="container">
        <div class="row">

            {{ form_start(formEmetteur) }}

            <div class="row titreForm">
                <div class="titreText">
                    <h5>Emetteur</h5>
                </div>
                <div class="titreBarre">
                    <h5 class="barre"></h5>
                </div>
            </div>

            <div class="row">
                <div class="col m4 s12">{{ form_row(formEmetteur.fichier_bsd, {'required' : false}) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.id_bsd) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.date_enlevement) }}</div>
            </div>

            <div class="row">
                <div class="col m4 s12">{{ form_row(formEmetteur.code_nomenclature) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.code_dr) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.quantite) }}</div>
                <div class="col m12 s12">{{ form_row(formEmetteur.designation) }}</div>
            </div>

            <div class="row titreForm">
                <div class="titreText">
                    <h5>Transporteur & Entreposeur</h5>
                </div>
                <div class="titreBarre">
                    <h5 class="barre"></h5>
                </div>
            </div>

            <div class="row">
                <div class="col m6 s12">{{ form_row(formEmetteur.transporteur) }}</div>
                <div class="col m6 s12">{{ form_row(formEmetteur.entreposage) }}</div>
            </div>

            <div class="row titreForm">
                <div class="titreText">
                    <h5>Traitement</h5>
                </div>
                <div class="titreBarre">
                    <h5 class="barre"></h5>
                </div>
            </div>

            <div class="row">
                <div class="col m6 s12">{{ form_row(formEmetteur.entreprise_traitement) }}</div>
                <div class="col m6 s12">{{ form_row(formEmetteur.mode_traitement) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.code_dr_traitement) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.date_admission) }}</div>
                <div class="col m4 s12">{{ form_row(formEmetteur.date_traitement) }}</div>

            </div>

            <div class="row">
                <div class="col m12 s12">{{ form_row(formEmetteur.commentaire) }}</div>
            </div>

            <div class="col s12">
                <div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Enregistrer
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

            {{ form_end(formEmetteur) }}

        </div>
    </div>

{% endblock %}