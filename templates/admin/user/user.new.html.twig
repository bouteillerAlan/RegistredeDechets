{% extends 'admin/backhome.html.twig' %}

{% block title %}New Utilisateurs{% endblock %}

{% block subcontent %}

    <div class="container">
        <div class="row">

            {{ form_start(form) }}

            <div class="col m6 s12">{{ form_row(form.name) }}</div>
            <div class="col m6 s12">{{ form_row(form.password, {'type': 'password'}) }}</div>
            <div class="col s12">
                <div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Enregistrer
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}